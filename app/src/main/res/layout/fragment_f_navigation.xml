<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.consof.universalremote.fNavigation">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTopArrow"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_row="0"
                android:src="@drawable/toparrow" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLeftArrow"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/leftarrow" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnter"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:src="@drawable/enter"
            android:background="@android:color/transparent" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRightArrow"
                android:layout_column="2"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/rightarrow" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomArrow"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_row="2"
            android:src="@drawable/bottomarrow" />

    </GridLayout>
</FrameLayout>
