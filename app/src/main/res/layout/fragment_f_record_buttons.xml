<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.consof.universalremote.fRecordButtons">

    <!-- TODO: Update blank fragment layout -->

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15px"
        android:columnCount="4"
        android:rowCount="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnToStart"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/tostart"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStop"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/stop"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFastReverse"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/fastreverse"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFastForward"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/fastforward"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnToEnd"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/toend"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPause"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/pause"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlay"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/play"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecord"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/record"
            android:layout_margin="5dp" />

    </GridLayout>
</FrameLayout>
