<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.consof.universalremote.fCustomButtons">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:useDefaultMargins="true"
        android:layout_gravity="center"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_margin="10dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVolUp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/plus"
            android:background="#00ffffff"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChaUp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#00ffffff"
            android:src="@drawable/plus" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#00ffffff"
            android:src="@drawable/volumelabel" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#00ffffff"
            android:src="@drawable/channellabel" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVolDown"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#00ffffff"
            android:src="@drawable/minus" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChaDown"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/minus"
            android:background="#00ffffff" />
    </GridLayout>
</FrameLayout>
